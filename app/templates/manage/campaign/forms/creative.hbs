<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="creative-title">Title {{required-field-label}}</label>
      {{character-count value=form.model.title}}
      {{input
        id="creative-title"
        class="form-control"
        required=true
        value=form.model.title
        placeholder="A Very Attractive Title"
        focusOut=(action form.actions.autosave)
        keyUp=(action form.actions.autosave 750)
      }}
      <div class="invalid-feedback">
        Please provide a title for the creative.
      </div>
      <small id={{concat "titleHelp." index}} class="form-text text-muted">
        The clickable text that will display in the advertisement.
      </small>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="creative-teaser">Teaser {{required-field-label}}</label>
      {{character-count value=form.model.teaser}}
      {{textarea
        id="creative-teaser"
        class="form-control"
        required=true
        value=form.model.teaser
        rows=4
        placeholder="A short description of your awesome link"
        focusOut=(action form.actions.autosave)
        keyUp=(action form.actions.autosave 750)
      }}
      <div class="invalid-feedback">
        Please provide a teaser for the creative.
      </div>
      <small id={{concat "teaserHelp." index}} class="form-text text-muted">
        A short description for your link.
      </small>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="form-group mb-0">
      <label for="creative-link-text">Link Text</label>
      {{character-count value=form.model.linkText}}
      {{input
        id="creative-link-text"
        class="form-control"
        required=false
        value=form.model.linkText
        focusOut=(action form.actions.autosave)
        keyUp=(action form.actions.autosave 750)
      }}
      <div class="invalid-feedback">
        Please provide link text.
      </div>
      <small id={{concat "link-textHelp." index}} class="form-text text-muted">
        Call to action text. This is <em>only</em> used in email campaigns.
      </small>
    </div>
  </div>
</div>
